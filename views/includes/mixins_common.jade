		div.col-sm-5.col-md-3
			img.img-rounded(src='/images/Logo1.png' alt='logo EMT' width='200px')
		div.col-sm-7.col-md-9.row
			h1.col-sm-6.col-md-9=mTitol
			h4.col-sm-6.col-md-3
				span=mSotstitol	

